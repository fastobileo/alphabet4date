{% extends 'base.html.twig' %}

{% block title %}Hello DateController!{% endblock %}

{% block body %}

    <div class="container my-5">
        <div class="card">
            <div class="card-body">
                <h1>La lettre <b>{{ date.name }}</b></h1>
                {{ form_start(form) }}

                <div>
                    {{ form_label(form.comment) }}
                    {{ form_widget(form.comment) }}
                </div>
                <div>
                    {{ form_label(form.date) }}
                    {{ form_widget(form.date) }}
                </div>
                <div class="mt-3">
                    {{ form_widget(form.imageFile) }}
                </div>
                <div class="mt-3">
                    {{ form_widget(form.submit) }}
                </div>
                {{ form_end(form) }}
            </div>
            {% if date.image.name %}
                <img style="width: 100%; height: 400px; object-fit: cover; object-position: bottom;"
                     src="{{ vich_uploader_asset(date) }}" alt="{{ date.name }}" class="card-img-bottom">
            {% endif %}
        </div>

    </div>

{% endblock %}
