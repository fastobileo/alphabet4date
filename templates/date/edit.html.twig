{% extends 'base.html.twig' %}

{% block title %}Modification date{% endblock %}

{% block body %}
    <div class="m-4">
        <a class="text-dark" href="{{ path("app_date") }}">
            <button type="button" class="btn btn-outline-dark btn-floating">
                <i class="fa-solid fa-arrow-left"></i>
            </button>
        </a>
    </div>
    <div class="container my-4">
        {% for error in errors %}
            <div class="alert alert-danger my-5" role="alert">
                {{ error.message }}
            </div>
        {% endfor %}
        <div class="card">
            <div class="card-body">
                <h2>La lettre <b>{{ date.name }}</b></h2>
                {{ form_start(form) }}

                <div>
                    {{ form_label(form.comment) }}
                    {{ form_widget(form.comment) }}
                </div>
                <div>
                    {{ form_label(form.date) }}
                    {{ form_widget(form.date) }}
                </div>
                <div class="mt-3">
                    {{ form_widget(form.imageFile) }}
                </div>
                <div>
                    {{ form_label(form.password) }}
                    {{ form_widget(form.password) }}
                </div>
                <div class="mt-3">
                    {{ form_widget(form.submit) }}
                </div>
                {{ form_end(form) }}
            </div>
        </div>
        {% if date.imageName %}
            <div class="d-flex justify-content-center m-5">
                <img style=" height: 400px;"
                     src="{{ vich_uploader_asset(date) }}" alt="{{ date.name }}">
            </div>
        {% endif %}
    </div>
{% endblock %}
